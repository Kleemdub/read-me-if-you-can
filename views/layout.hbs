  </head>
  <body>

    {{!-- HEADER /////////////////////////////////////////////////////////////////////////////// --}}

    <header>

      {{!-- NAV FOR LAREGE SCREEN  --}}
      <div class="navbar-fixed">
        <nav>
          <div class="nav-wrapper">
            <a href="/" class="brand-logo"><img class="responsive-img rmiyc-logo" src="/images/rmiyc_logo_300x60.png" /></a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">

              {{#if blahUser}}

                <li><a href="/">Books Map</a></li>
                <li><a href="/books-list">Books List</a></li>
                <li><a href="/book-add">Share a book</a></li>
                {{!-- <li><a href="/book-page">Book Page</a></li> --}}
                <li><a href="/user-account/{{blahUser._id}}">{{blahUser.nickname}} - <span class="score">{{blahUser.score}}</span></a></li>
                <li><a href="/logout"> <i class="material-icons logout-btn">power_settings_new</i></a></li>





              {{else}}
                  <li><a href="/signup">Sign up now</a>
                  <li><a href="/login"><span class="fade-text">Already have an account?</span> Log In</a></li>
              {{/if}}


            </ul>
          </div>
        </nav>
      </div>

      {{!-- NAV FOR MOBILE  --}}
      <ul class="sidenav" id="mobile-demo">

        {{#if blahUser}}

          <li><a href="/">Books Map</a></li>
          <li><a href="/books-list">Books List</a></li>
          <li><a href="/book-add">Share a book</a></li>
          {{!-- <li><a href="/book-page">Book Page</a></li> --}}
          <li><a href="/user-account/{{blahUser._id}}">{{blahUser.nickname}} - {{blahUser.score}}</a></li>
          <li><a href="/logout"> <i class="material-icons logout-btn">power_settings_new</i></a></li>

        {{else}}
            <li><a href="/signup">Sign up now</a>
            <li><a href="/login">Log In</a></li>
        {{/if}}

      </ul>

    </header>

    {{!-- END OF THE HEADER //////////////////////////////////////////////////////////////////// --}}

    {{!-- <main class="container main-container"> --}}

      {{{body}}}

    {{!-- </main> --}}

    

