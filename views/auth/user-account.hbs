<h2>{{user.capName}} <span class="white-text">ACCOUNT</span></h2>


<div class="container main-container">

  <div class="row user-account-row">

    <div class="col s12 l6 col-margin">
      <h3><span class="white-text">THE BOOKS I FOUND</span></h3>
      {{#each myBook}}
        {{#if this.found}}
          <div class="finded-book-item left center-align col s6 m6 l6 xl4">
              <div class="add-form-wrap center-align">

                  <img src="{{this.imageUrl}}" />   
                  <div class="book-item-inner-wrap center-align">
                      <h5>{{this.title}}</h5>
                      <p>{{this.author}}</p>
                      <button class="add-book-btn btn-floating btn-large waves-effect waves-light pink accent-3 pulse"><a href="/my-book-page/{{this._id}}"><i class="material-icons">info</i></a></button>
                  </div>
              </div>
          </div>
        {{/if}}
      {{/each}}
      <div class="clearBoth"></div>
    </div>

    <div class="col s12 l6">
      <h3><span class="white-text">THE BOOKS I HAVE HIDE OUT</span></h3>

      {{#each myBook}}
        {{#if this.cached}}
          <div class="finded-book-item left center-align col s6 m6 l6 xl4">
              <div class="add-form-wrap center-align">

                  <img src="{{this.imageUrl}}" />   
                  <div class="book-item-inner-wrap center-align">
                      <h5>{{this.title}}</h5>
                      <p>{{this.author}}</p>
                      <button class="add-book-btn btn-floating btn-large waves-effect waves-light pink accent-3 pulse"><a href="/book-page/{{this._id}}"><i class="material-icons">info</i></a></button>
                  </div>
              </div>
          </div>
        {{/if}}
      {{/each}}
      <div class="clearBoth"></div>
    </div>

  </div>

    

