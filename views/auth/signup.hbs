<div class="row">
      <div class="col s12 l6 col-gauche">Blah Blah Blah</div>
      
      <div class="col s12 l6 col-droite">

        <section class="google-login">
          {{!-- <h4>LOG IN WITH YOUR GOOGLE ACCOUNT</h4> --}}
          <button class="google-btn">
            <a href="/google/login">
              <p class="left">LOG IN WITH YOUR<br/> GOOGLE ACCOUNT</p>
              <img class=" right google-image" src="../../images/Google_logo-640x210.png" />
            </a>
          </button>
        </section>

        <section class="sign-up-section">
          <h4>SIGN UP</h4>
          <form id="signup-form" action="/process-signup" method="post">


          <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <input id="fullName" type="text" name="fullName" class="validate">
            <label for="fullName">Full Name</label>
          </div>

          <div class="input-field">
            <i class="material-icons prefix">insert_emoticon</i>
            <input id="nickName" type="text" name="nickName" class="validate">
            <label for="nickName">Nickname</label>
          </div>

          <div class="input-field">
            <i class="material-icons prefix">mail</i>
            <input id="email" type="email" name="email" class="validate">
            <label for="email">Email</label>
          </div>

          <div class="input-field">
            <i class="material-icons prefix">lock</i>
            <input id="password" type="password" name="password" class="validate">
            <label for="password">Password</label>
          </div>

          <div class="input-field">
            <i class="material-icons prefix">lock_outline</i>
            <input id="password-match" type="password" name="password-match" class="validate">
            <label for="password-match">Confirm Password</label>
          </div>

          <br>

            <button class="waves-effect waves-light btn sign-up-btn blue darken-3 right">Sign up</button>
          </form>

          <div class="clearBoth"></div>
        </section>

        
        

      </div>

</div>

